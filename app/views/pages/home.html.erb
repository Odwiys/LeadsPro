            <li class="nav-item d-flex">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              <%= link_to "Log in", user_session_path, class: "nav-link rounded-rectangle-button" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>


