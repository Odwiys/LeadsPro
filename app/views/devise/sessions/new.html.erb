<div class="background" style="height: 94vh;">
  <div><%= image_tag('logo/logo-icon.png')%></div>
  <div id="screen-size" class="d-flex justify-content-center">
    <div class="row m-5 p-5 box bg-white shadow-lg welcome-height welcome-box"> 
        <h3  class="mb-3 text-left">Log in</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs text-primary">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

          <div class="form-actions d-flex mt-4">
            <%= f.button :submit, "Log in", class: "btn btn-primary mb-3 login-button" %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center">
          <p>New to LeadsPro? <%= render "devise/shared/links" %></p>
        </div>
      </div>
  </div>
</div>
