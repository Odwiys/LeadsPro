<%= popup title: "Add your customized question" do %>
  <%# Form for question %>
  <%= simple_form_for question, url: campaign_form_questions_path(campaign, form) do |f| %>
    <%= f.input :format, as: :hidden, input_html: { value: 'Open-Ended' } %>
    <%= f.input :title, label: "Type your question here" %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
<% end %>
