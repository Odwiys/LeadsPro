<%# Navbar content over here %>
<div class="navbar-custom p-3 mb-5 rounded" data-controller="navbar">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <%= link_to(image_tag("logo/logo-white.png", style: "width: 150px;"), root_path) %>
    <i class="fa fa-bars fa-2x text-white" data-action="click->navbar#openMenu"></i>
  </div>

  <div class="slider-menu-wrapper" data-navbar-target="menu">
    <div class="menu-content">

      <div class="d-flex flex-row-reverse mt-3 mx-4">
          <i class="fa-solid fa-xmark fa-2x" data-action="click->navbar#closeMenu"></i>
      </div>

      <div class="menu-container navbar-top-margin">
        <%= button_to "+ New Campaign", new_campaign_path, method:  :get, class: "btn btn-info mb-5" %>
        <ul class="menu-items">

        <p>Menu</p>
          <li class="nav-item">
            <a href="<%= root_path %>" class="nav-link link-light">
              <i class="fa fa-home"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a href="<%= campaigns_path %>" class="nav-link link-light">
              <i class="fa fa-bullhorn"></i> Campaigns
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link link-light">
              <i class="fa fa-users"></i> Leads
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link link-light">
              <i class="fa fa-chart-bar"></i> Report
            </a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link link-light">
              <i class="fa fa-gear"></i> Settings
            </a>
          </li>
        </ul>
        <% if user_signed_in? %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-light navbar-top-margin", form: { data: { "turbolinks-action": "replace", "turbolinks-frame": "_top" } } %>
        <% else %>
          <%= button_to "Log out", root_path, class: "btn btn-light" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
